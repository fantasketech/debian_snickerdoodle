#autodetach off
vbell off
defscrollback 20000
multiuser on

# kill startup message
startup_message off

# detach on hangup
autodetach on

#escape ^Bb

# shell
shell -bash

#start up screens
screen -t "bash" bash
screen -t "bash" bash
screen -t "bash" bash
screen -t "bash" bash

# An alternative hardstatus to display a bar at the bottom listing the
# windownames and highlighting the current windowname in blue.
hardstatus on
hardstatus alwayslastline
hardstatus string "%H %30= %-w%{= BW}%n* %t%{-} %+w %= %{dd} %C%a"

